@model IEnumerable<taha0025lab4.Models.Movie>
@{
    Layout = "_Layout";
}

    <div class="container">
    <div class="page-header"><h2>Home</h2></div>
    <table style="width: 100%" class="table table-hover table-striped">
        @if (Model == null || Model.Count() == 0)
        {
            <tbody>
                <tr>
                    <td colspan="6">There are no movies in your database.<br /><br /></td>
                </tr>
            </tbody>
        }
        else
        {
            <thead>
                <tr>
                    <th><div></div></th>
                    <th><div style="text-align:left">Movie Title</div></th>
                    <th><div style="text-align:left">Movie SubTitle</div></th>
                    <th><div style="text-align:left">Description</div></th>
                    <th><div style="text-align:left">Year</div></th>
                    <th><div style="text-align:left">Rating</div></th>
                </tr>
            </thead> 
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <button type="button" class="btn btn-primary btn-xs" onclick="location.href='@Url.Action("EditMovie", "Home", new { id = item.MovieId })'">Edit</button>
                        </td>
                        <td><div style="text-align:left">@item.Title</div></td>
                        <td><div style="text-align:left">@item.SubTitle</div></td>
                        <td><div style="text-align:left">@item.Description</div></td>
                        <td><div style="text-align:left">@item.Year</div></td>
                        <td><div style="text-align:left">@item.Rating/5</div></td>
                        <td>
                            <!-- Trigger the modal with a button -->
                            <button type="button" class="btn btn-danger btn-xs" data-toggle="modal" data-target="#myModal">Delete</button>

                            <!-- Modal -->
                            <div id="myModal" class="modal fade" role="dialog">
                                <div class="modal-dialog">

                                    <!-- Modal content-->
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                                            <h4 class="modal-title">Delete Movie</h4>
                                        </div>
                                        <div class="modal-body">
                                            <p>Are you sure you want to delete this movie?</p>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-danger" onclick="location.href='@Url.Action("DeleteMovie", "Home", new { id = item.MovieId })'">Delete</button>
                                            <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </td>
                    </tr>
                }
                </tbody>
            }
        </table>
    </div>
